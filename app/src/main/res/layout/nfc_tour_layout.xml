<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_r"
    android:orientation="vertical"
    android:weightSum="1"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleT1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Title"
            android:textColor="#EF9A9A"
            android:textSize="30dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/authorT1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Author"
            android:textColor="#EF9A9A"
            android:textSize="20dp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/yearT1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Year"
            android:textColor="#EF9A9A"
            android:gravity="center_horizontal"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/descriptionT1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Description"
            android:textColor="#EF9A9A"
            android:gravity="center_horizontal"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="110dp">

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="84dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_p"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/pauseBtn"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pause_circle_filled_black_36dp"
            android:background="@null"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/galleryBtn"
            android:layout_width="85dp"
            android:layout_height="94dp"
            android:background="@null"
            android:src="@drawable/ic_palette_black_36dp"
            android:layout_gravity="center"/>

    </LinearLayout>




</LinearLayout>