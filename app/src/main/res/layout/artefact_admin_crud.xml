<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AD1457">

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".admin.department.artefact.show.ArtefactCrudOperationsActivity"
        android:background="@drawable/ic_l"
        android:gravity="center">

        <TextView
            android:id="@+id/artefactText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artefact's Page"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="#F3E5F5"/>


    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@drawable/ic_m"
        />

</android.support.v4.widget.DrawerLayout>




