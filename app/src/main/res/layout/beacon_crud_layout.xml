<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layoutBeacon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_t">

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:id="@+id/relativeLayoutBeacon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".admin.department.beacon.BeaconCRUDOperationsActivity"
        android:background="@drawable/ic_t"
        android:gravity="center">

        <TextView
            android:id="@+id/beaconText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beacons's Page"
            android:gravity="center"
          android:textStyle="italic"
            android:textSize="40dp"
            android:textColor="#880E4F"/>


    </RelativeLayout>

    <!-- Side navigation drawer UI -->
    <ListView
        android:id="@+id/navListBeacon"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="@drawable/ic_w"
        />

</android.support.v4.widget.DrawerLayout>
