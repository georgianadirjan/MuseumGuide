<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/login_fragment_id">

    <EditText
        android:id="@+id/firstname_txt"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/firstname"
        android:layout_width="250px"
        android:layout_height="150px"
        android:text="First name"
        android:textSize="20sp"
        android:layout_alignTop="@+id/firstname_txt"
        android:layout_toStartOf="@+id/firstname_txt"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/firstname_txt" />

    <TextView
        android:id="@+id/lastname"
        android:layout_width="250px"
        android:layout_height="90px"
        android:textSize="20sp"
        android:text="Last Name"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/firstname_txt"
        android:layout_alignEnd="@+id/firstname" />


    <EditText
        android:id="@+id/lastname_txt"
        android:layout_width="2600px"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lastname"
        android:layout_alignEnd="@+id/firstname_txt"
        android:layout_alignStart="@+id/firstname_txt" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:text="Login"
      />


</RelativeLayout>