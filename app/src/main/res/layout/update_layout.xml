<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/update_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_o"
    android:orientation="vertical">

    <EditText
        android:id="@+id/idUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/deep_blue" />

    <TextView
        android:id="@+id/idUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/idUserText"
        android:layout_alignParentStart="true"
        android:text="ID"
        android:textColor="@color/deep_blue"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/idUser"
        android:layout_marginTop="25dp"
        android:text="First name"
        android:textColor="@color/deep_blue"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/firstname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lastname"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/deep_blue" />

    <TextView
        android:id="@+id/lastname"
        android:layout_width="300px"
        android:layout_height="90px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/firstname"
        android:layout_marginTop="28dp"
        android:text="Last Name"
        android:textColor="@color/deep_blue"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/lastname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lastname"
        android:layout_alignEnd="@+id/firstname_txt"
        android:layout_alignStart="@+id/firstname_txt"
        android:textColor="@color/deep_blue" />

    <EditText
        android:id="@+id/username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/username"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/deep_blue" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lastname"
        android:layout_marginTop="31dp"
        android:text="Username"
        android:textColor="@color/deep_blue"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="300px"
        android:layout_height="90px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_txt"
        android:layout_marginTop="33dp"
        android:text="Password"
        android:textColor="@color/deep_blue"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/username_txt"
        android:layout_alignTop="@+id/password"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/deep_blue" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="90px"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password"
        android:layout_marginTop="26dp"
        android:text="E-mail"
        android:textColor="@color/deep_blue"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password_text"
        android:layout_alignTop="@+id/email"
        android:ems="10"
        android:textColor="@color/deep_blue" />

    <Button
        android:id="@+id/upD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email_text"
        android:layout_below="@+id/email"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:text="UPDATE"
        android:textColor="@color/deep_blue" />


</RelativeLayout>