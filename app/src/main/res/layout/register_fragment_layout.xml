<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_e">




    <EditText
        android:id="@+id/firstname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name"
        android:textSize="30sp"
        android:textColor="@color/deep_blue"
        android:layout_alignBottom="@+id/firstname_txt"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lastname"
        android:layout_width="300px"
        android:layout_height="90px"
        android:textSize="30sp"
        android:text="Last Name"
        android:layout_marginTop="41dp"
        android:textColor="@color/deep_blue"
        android:layout_below="@+id/firstname"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/lastname_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lastname"
        android:layout_alignEnd="@+id/firstname_txt"

        android:layout_alignStart="@+id/adduserFloatingBtn" />

    <EditText
        android:id="@+id/username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/username"
        android:layout_alignParentEnd="true"
       />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="30sp"
        android:layout_marginTop="31dp"
        android:textColor="@color/deep_blue"
        android:layout_below="@+id/lastname"
        android:layout_alignEnd="@+id/lastname"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/password"
        android:layout_width="300px"
        android:layout_height="90px"
        android:textSize="30sp"
        android:text="Password"
        android:layout_marginTop="27dp"
        android:textColor="@color/deep_blue"
        android:layout_below="@+id/username_txt"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/password"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/adduserFloatingBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_text"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="37dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_plus" />


</RelativeLayout>